{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "com.jkworks.billing.schema",
  "type": "object",
  "required": ["bill", "items"],
  "properties": {
    "bill": {
      "type": "object",
      "required": ["bill_no", "bill_date", "customer", "status"],
      "properties": {
        "bill_no": { "type": "string", "minLength": 1 },
        "bill_date": { "type": "string", "format": "date" },
        "customer": { "type": "string" },
        "status": { "type": "string", "enum": ["Draft", "Confirmed", "Paid", "Void"] }
      },
      "additionalProperties": false
    },
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["type", "number", "amount"],
        "properties": {
          "type": { "type": "string", "enum": ["2D", "3D"] },
          "number": { "type": "string", "pattern": "^[0-9]+$" },
          "amount": { "type": "number", "exclusiveMinimum": 0 }
        },
        "allOf": [
          { "if": { "properties": { "type": { "const": "2D" } } },
            "then": { "properties": { "number": { "type": "string", "minLength": 2, "maxLength": 2 } } } },
          { "if": { "properties": { "type": { "const": "3D" } } },
            "then": { "properties": { "number": { "type": "string", "minLength": 3, "maxLength": 3 } } } }
        ],
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}