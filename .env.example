# Environment Configuration Example
# Copy this file to .env and update with your values
# DO NOT commit .env to version control!

# Application Settings
APP_NAME=Mr. Chris Assistant
APP_VERSION=1.0.0
NODE_ENV=development

# Paths Configuration
NOTION_FILES_PATH=notion_files
DATA_PATH=data
SCRIPTS_PATH=scripts

# Feature Flags
ENABLE_CSV_VALIDATION=true
ENABLE_IMPORT_HELPER=true
ENABLE_AUTO_FLOW=true

# Validation Settings
VALIDATION_STRICT_MODE=false
VALIDATION_DATE_FORMAT=YYYY-MM-DD HH:MM
VALIDATION_TIMEZONE=Asia/Bangkok

# Logging Settings
LOG_LEVEL=info
LOG_COLORS=true
LOG_TIMESTAMPS=false

